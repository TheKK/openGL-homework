#version 400 core

in vec3 position;
in vec3 color;

out vec3 Color;

uniform mat4 rotaX;
uniform mat4 rotaY;
uniform mat4 rotaZ;
uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;

void main() {
	Color = color;
	gl_Position = proj * view * model * ( rotaX * rotaY * rotaZ ) * vec4( position / 3, 1.0 );
};

