#version 400 core

in vec3 position;

out vec3 Color;

uniform mat4 rotaX;
uniform mat4 rotaY;
uniform mat4 rotaZ;
uniform mat4 model;	//Model matrix
uniform mat4 view;	//View( camera ) matrix
uniform mat4 proj;	//Projection matrix

void main() {
	Color = vec3( 1.0, 1.0, 1.0 );
	gl_Position = proj * view * model * ( rotaX * rotaY * rotaZ ) * vec4( position / 4, 1.0 );
};

